<%- include('partials/header', { title: 'Home', user: user }) %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1> edit form</h1>
    <form action="/posts/<%= post._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
 <label for="title">Title</label>
 <input type="text" name="title" id="title" class="form-control" value="<%=post.title%>"/>
   
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea name="content" id="content" class="form-control" rows="5">
                <%=post.content%>
            </textarea>
            <div>
                
                <div class="form-group">
                    <label for="images">Images</label>
                    <input
                      type="file"
                      class="form-control-file"
                      name="images"
                      id="images"
                      multiple
                    />
                    <div class="mt-3">
                <%post?.images?.forEach((image)=>{%>
                          <img style="max-width: 100px; border-radius: 2px; margin:3px; aspect-ratio: 1;" src="<%= image.url %>" alt=""/>
                <%})%>
            </div>
        </div>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Update Post</button>
        </div>
        </form>
  
    
</body>
</html>
<%- include('partials/footer') %>